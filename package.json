{
  "name": "project-manager-backend",
  "version": "1.0.0",
  "description": "-- Project Manager --",
  "main": "index.js",
  "scripts": {
    "pretest": "npx prisma migrate reset --force --skip-seed --schema src/database/prisma/schema.test.prisma",
    "test": "NODE_ENV=test jest --runInBand --testTimeout=600000",
    "prestart": "tsc",
    "start": "node ./dist/server.js",
    "dev": "tsnd --exit-child ./src/server.ts",
    "migrate": "prisma migrate dev",
    "migrate:dev": "prisma migrate dev --schema src/database/prisma/schema.dev.prisma",
    "studio:dev": "prisma studio --schema src/database/prisma/schema.dev.prisma",
    "reset": "prisma migrate reset --force",
    "lint": "npx eslint . --ext .ts",
    "deploy": "node ./dist/server.js"
  },
  "prisma": {
    "seed": "ts-node src/database/seeders/seed.ts",
    "schema": "src/database/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pedro0505/project-manager-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pedro0505/project-manager-backend/issues"
  },
  "homepage": "https://github.com/Pedro0505/project-manager-backend#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.22",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "prisma": "^3.12.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "argon2": "^0.28.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rescue": "^1.1.31",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "shelljs": "^0.8.5",
    "uuid": "^8.3.2"
  }
}
